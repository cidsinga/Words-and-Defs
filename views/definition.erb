<h2>Word: <%= @word.actual_word %></h2>
<h3>Current Definition: <%= @definition.word_def %></h3>

<form action="/words/<%= @definition.actual_word %>/definitions/<%=     @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="definition">Update Definition</label>
  <input id="definition" name="definition" type="text">

  <button type="submit" class="btn">Update</button>

</form>
<form action="/words/<%= @definition.actual_word %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/words/<%= @definition.actual_word %>">Back to Definitions</a>
