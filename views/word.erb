<h2>Word: <%= @word.actual_word %></h2>

<h3>Definitions</h3>

  <% if @word.definitions %>
    <ul>
      <% @word.definitions.each do |definition| %>
        <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.word_def %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no definitions listed for this word yet.</p>
  <% end %>

<h4>Add a definition: </h4>

<form action="/words/<%= @word.id %>/definitions" method="post">
  <div class="form-group">
    <label for="word_def">Definition</label>
    <input id="word_def" name="word_def" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add definition</button>
</form>



<p><a href="/words/<%= @word.id %>/edit">Edit Word</a></p>
<p><a href="/words">Return to word list</a></p>
